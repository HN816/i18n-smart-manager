{
  "name": "i18n-manager",
  "displayName": "i18n Manager",
  "description": "한글 텍스트 추출 및 i18n 관리 익스텐션",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "dependencies": {
    "google-spreadsheet": "^3.3.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "i18n-manager.start",
        "title": "시작",
        "description": "I18n Manager: Start monitoring Korean texts",
        "icon": "$(eye)"
      },
      {
        "command": "i18n-manager.stop",
        "title": "중지",
        "description": "I18n Manager: Stop monitoring Korean texts",
        "icon": "$(eye-closed)"
      },
      {
        "command": "i18n-manager.refresh",
        "title": "새로고침",
        "description": "I18n Manager: Refresh Korean text detection",
        "icon": "$(refresh)"
      },
      {
        "command": "i18n-manager.convertAll",
        "title": "전체 변환",
        "description": "I18n Manager: Convert all Korean texts to i18n keys",
        "icon": "$(wand)"
      },
      {
        "command": "i18n-manager.exclude",
        "title": "제외하기",
        "description": "I18n Manager: Exclude text from conversion",
        "icon": "$(x)"
      },
      {
        "command": "i18n-manager.include",
        "title": "포함하기",
        "description": "I18n Manager: Include text in conversion",
        "icon": "$(check)"
      },
      {
        "command": "i18n-manager.goToText",
        "title": "위치로 이동",
        "description": "I18n Manager: Go to text location",
        "icon": "$(location)"
      },
      {
        "command": "i18n-manager.previewConversion",
        "title": "변환 미리보기",
        "description": "I18n Manager: Preview conversion results",
        "icon": "$(eye)"
      },
      {
        "command": "i18n-manager.clearPreview",
        "title": "미리보기 제거",
        "description": "I18n Manager: Clear conversion preview",
        "icon": "$(x)"
      },
      {
        "command": "i18n-manager.addSelected",
        "title": "선택된 텍스트 추가",
        "description": "I18n Manager: Add selected text to pending list",
        "icon": "$(add)"
      },
      {
        "command": "i18n-manager.generateLocales",
        "title": "locales 파일 생성",
        "description": "I18n Manager: Generate locales files",
        "icon": "$(file-code)"
      },
      {
        "command": "i18n-manager.uploadToSpreadsheet",
        "title": "Upload Locales to Google Sheets",
        "description": "I18n Manager: Upload locales files to Google Sheets",
        "icon": "$(go-to-file)"
      }
    ],
    "keybindings": [
      {
        "command": "i18n-manager.addSelected",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "i18n-manager.refresh",
          "when": "view == i18nManager",
          "group": "navigation@1"
        },
        {
          "command": "i18n-manager.start",
          "when": "view == i18nManager && !i18nManager.isActive",
          "group": "navigation@2"
        },
        {
          "command": "i18n-manager.stop",
          "when": "view == i18nManager && i18nManager.isActive",
          "group": "navigation@3"
        },
        {
          "command": "i18n-manager.generateLocales",
          "when": "view == i18nManager && i18nManager.isActive",
          "group": "navigation@4"
        },
        {
          "command": "i18n-manager.convertAll",
          "when": "view == i18nManager && i18nManager.isActive",
          "group": "navigation@5"
        },
        {
          "command": "i18n-manager.generateLocales",
          "when": "view == i18nManager && i18nManager.isActive",
          "group": "navigation@6"
        },
        {
          "command": "i18n-manager.uploadToSpreadsheet",
          "when": "view == i18nManager",
          "group": "navigation@7"
        }
      ],
      "view/item/context": [
        {
          "command": "i18n-manager.exclude",
          "when": "view == i18nManager && viewItem == korean-text",
          "group": "inline"
        },
        {
          "command": "i18n-manager.include",
          "when": "view == i18nManager && viewItem == excluded-text",
          "group": "inline"
        },
        {
          "command": "i18n-manager.goToText",
          "when": "view == i18nManager && (viewItem == korean-text || viewItem == i18n-text)",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "i18n-manager.addSelected",
          "when": "editorTextFocus",
          "group": "i18n-manager"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "i18n-manager",
          "title": "i18n Manager",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "i18n-manager": [
        {
          "id": "i18nManager",
          "name": "i18n Manager"
        }
      ]
    },
    "configuration": {
      "title": "i18n Manager",
      "properties": {
        "i18nManager.keyGeneration.customFunction": {
          "type": "string",
          "default": "text => text.replace(/\\s+/g, '_').replace(/\\./g, '#dot#')",
          "description": "키 생성 커스텀 함수 (JavaScript 코드). 'text' 매개변수를 받아 변환된 키를 반환해야 합니다."
        },
        "i18nManager.translation.deeplApiKey": {
          "type": "string",
          "default": "",
          "description": "DeepL API 키"
        },
        "i18nManager.locales.outputPath": {
          "type": "string",
          "default": "",
          "description": "locales 파일 저장 경로 (비어있으면 프로젝트 루트에 저장)"
        },
        "i18nManager.spreadsheet.googleApiKey": {
          "type": "string",
          "default": "",
          "description": "구글 API 키 (스프레드시트 접근용)"
        },
        "i18nManager.spreadsheet.serviceAccountCredentials": {
          "type": "object",
          "default": null,
          "description": "Google Service Account 인증 정보 (JSON 형태)"
        },
        "i18nManager.spreadsheet.spreadsheetId": {
          "type": "string",
          "default": "",
          "description": "구글 스프레드시트 ID"
        },
        "i18nManager.locales.enabledLanguages": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "ko",
              "en",
              "zh",
              "ja"
            ]
          },
          "default": [
            "ko",
            "en",
            "zh",
            "ja"
          ],
          "description": "활성화할 언어들 (한국어, 영어, 중국어, 일본어 중 선택)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.3.0",
    "@types/google-spreadsheet": "^3.3.0"
  }
}
